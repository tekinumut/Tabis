<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    tools:context=".activities.CreateRecords">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="@color/colorPrimary">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/beyaz"
        android:text="@string/verialinamadi"
        android:id="@+id/tab1isim"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tab1unvan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/beyaz"
        android:text="@string/verialinamadi"/>

</LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/colorPrimary"

        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/beyaz">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/beyaz"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/Email"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:textColor="@color/colorPrimary"
            android:background="@color/beyaz"
            android:textStyle="bold" />

    <ImageView
        android:contentDescription="@string/tab1info_image_email"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/emailicon"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"

       />
</LinearLayout>

        <TextView
            android:layout_marginStart="7dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:layout_gravity="center_vertical"
            android:text="@string/verialinamadi"
            android:id="@+id/tab1mail"
            android:layout_marginEnd="5dp"
            android:textColor="@color/colorPrimary"
            />
</LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"

        app:cardBackgroundColor="@color/colorPrimary"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/beyaz"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/beyaz"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/tab1info_phone"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/beyaz"
                    android:textStyle="bold" />

                <ImageView
                    android:contentDescription="@string/tab1info_image_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="11dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginBottom="5dp"
                    android:background="@mipmap/phoneicon"
                    />
            </LinearLayout>

            <TextView
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:layout_gravity="center_vertical"
                android:text="@string/verialinamadi"
                android:id="@+id/tab1telefon"
                android:layout_marginEnd="5dp"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/colorPrimary"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab1info_depart"
                android:layout_marginEnd="5dp"
                android:textStyle="bold"
                android:textColor="@color/beyaz"
                />

            <Spinner
                android:id="@+id/tab1spinnerdepart"
                android:theme="@style/Spinner"
                android:background="@color/beyaz"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                />

            <TextView
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab1info_description"
                android:layout_marginEnd="5dp"
                android:textStyle="bold"
                android:textColor="@color/beyaz"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/beyaz"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tab1description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:maxLength="999"
                    android:gravity="top"
                    android:hint="@string/tab1info_description_hint" />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
