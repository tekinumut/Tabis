<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/rec_in_image"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="@string/recycler_inside_image_main"
                android:padding="4dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/rec_in_depart"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="50dp"
                android:layout_toEndOf="@id/rec_in_image"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/verialinamadi"
                android:textColor="@color/beyaz"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/rec_in_department_forward"
                android:layout_width="24dp"
                android:layout_height="27dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:background="@mipmap/forwardicon"
                android:contentDescription="@string/recycler_inside_image_department_forward" />


            <TextView
                android:id="@+id/rec_in_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/rec_in_state"
                android:layout_below="@id/rec_in_depart"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/rec_in_image"
                android:text="@string/verialinamadi"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/rec_in_remaning_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toStartOf="@id/rec_in_state"
                android:layout_toEndOf="@id/rec_in_image"
                android:gravity="end"
                android:text="@string/verialinamadi" />

            <TextView
                android:id="@+id/rec_in_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/verialinamadi"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/beyaz"
                android:textSize="17sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>